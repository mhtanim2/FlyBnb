@model Villa
@{
    string action = ViewBag.Action ?? string.Empty;
}
<form method="post" class="row" enctype="multipart/form-data" asp-action="@action">
    @if (action == "update")
    {
        <input asp-for="Id" hidden />
    }
    
    <div class="col-10">
        <div class=" p-3">
            <div class="form-floating py-2 col-12">
                <input asp-for="Name" class="form-control border shadow" />
                <label asp-for="Name" class="ms-2"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <textarea id="rtDescription" asp-for="Description" style="height:150px" class="form-control border shadow summernote"></textarea>
                <label asp-for="Description" class="ms-2"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price" class="form-control border shadow" />
                <label asp-for="Price" class="ms-2"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Sqft" class="form-control border shadow" />
                <label asp-for="Sqft" class="ms-2"></label>
                <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Occupancy" class="form-control border shadow" />
                <label asp-for="Occupancy" class="ms-2"></label>
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Image" class="form-control border shadow" />
                <label asp-for="ImageUrl" class="ms-2"></label>
                <input asp-for="ImageUrl" hidden class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    @if (action.ToLower() == "update")
                    {
                        <button type="submit" class="btn btn-success form-control">Update</button>
                    }
                    else if (action.ToLower() == "create")
                    {
                        <button type="submit" class="btn btn-success form-control">Create</button>
                    }

                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Villa" asp-action="Index" class="btn btn-outline-secondary border  form-control">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-2">
        <div class=" pt-3">
            <img src="@Model.ImageUrl" width="100%"
                 style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    </div>

</form>